# Application
APP_ENV=prod
APP_SECRET=ChangeThisToARandomString32CharsLong
APP_DEBUG=0
APP_URL=https://your-domain.com
APP_NAME="Crypto Investment Platform"
APP_VERSION=1.0.0
TIMEZONE=UTC
DEFAULT_LOCALE=en

# Database
DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/crypto_investment?serverVersion=8.0&charset=utf8mb4"
DB_NAME=crypto_investment
DB_USER=crypto_user
DB_PASS=SecurePasswordHere
MYSQL_ROOT_PASSWORD=RootPasswordHere
MYSQL_SSL_CA=/path/to/ca-cert.pem

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=RedisPasswordHere

# RabbitMQ / Messenger
MESSENGER_TRANSPORT_DSN=amqp://guest:guest@localhost:5672/%2f/messages
RABBITMQ_DSN=amqp://crypto_user:RabbitPasswordHere@rabbitmq:5672
RABBITMQ_USER=crypto_user
RABBITMQ_PASS=RabbitPasswordHere

# Telegram Bot
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklmNOPqrstUVwxyz
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_WEBHOOK_SECRET=GenerateRandomWebhookSecret32Chars
TELEGRAM_ADMIN_CHAT_ID=-1001234567890
TELEGRAM_ALERTS_CHAT_ID=-1001234567891
TELEGRAM_DSN=telegram://TOKEN@default?channel=CHAT_ID

# Blockchain Configuration
TRON_API_KEY=your-tron-api-key-here
HOT_WALLET_ADDRESS=TYourHotWalletAddressHere
COLD_WALLET_ADDRESS=TYourColdWalletAddressHere
COLD_WALLET_THRESHOLD=10000
DEPOSIT_CONFIRMATION_BLOCKS=19

# Bonus Configuration
BONUS_DISTRIBUTION_PERCENTAGE=50
COMPANY_PERCENTAGE=50
BONUS_DISTRIBUTION_TIME=00:00

# Referral Configuration
REFERRAL_ENABLED=true
REFERRAL_REQUIRE_DEPOSIT=true
REFERRAL_MAX_LEVELS=2
REFERRAL_LEVEL_1_PERCENTAGE=10
REFERRAL_LEVEL_2_PERCENTAGE=5

# Withdrawal Configuration
AUTO_APPROVE_LIMIT=100
WITHDRAWAL_DAILY_LIMIT=10000
WITHDRAWAL_MIN_AMOUNT=10
WITHDRAWAL_FEE_PERCENTAGE=2
WITHDRAWAL_REQUIRED_APPROVALS=2
MINIMUM_DEPOSIT_AMOUNT=100

# Security Configuration
APP_ENCRYPTION_KEY=base64EncodedKeyHere32BytesLong
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=3600
REQUIRE_2FA_FOR_ADMINS=true
REQUIRE_2FA_FOR_WITHDRAWALS=true
SESSION_LIFETIME=3600
ALLOWED_COUNTRIES=["UA","US","GB","DE","FR","IT","ES","PL"]
BLOCKED_COUNTRIES=["KP","IR"]

# Email Configuration
MAILER_DSN=smtp://user:pass@smtp.example.com:587
MAILER_FROM=noreply@your-domain.com
MAILER_FROM_NAME="Crypto Investment Platform"
MAILER_REPLY_TO=support@your-domain.com
ADMIN_EMAIL=admin@your-domain.com
SUPPORT_EMAIL=support@your-domain.com
DEV_EMAIL=dev@your-domain.com

# JWT Configuration
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your-jwt-passphrase

# CORS Configuration
CORS_ALLOW_ORIGIN=https://your-domain.com
ADMIN_CORS_ORIGIN=https://admin.your-domain.com

# External Services
GEOIP_API_KEY=your-geoip-api-key
SENTRY_DSN=https://public@sentry.io/project-id
SLACK_TOKEN=xoxb-your-slack-token
SLACK_CHANNEL=#alerts

# Backup Configuration
S3_BACKUP_CONFIG={"bucket":"backup-bucket","key":"access-key","secret":"secret-key","region":"us-east-1"}
BACKUP_ENCRYPTION_KEY=BackupEncryptionKey32Chars

# Development Only
NGROK_URL=https://your-ngrok-url.ngrok.io
VAR_DUMPER_SERVER=127.0.0.1:9912

# Maintenance Mode
MAINTENANCE_MODE=false

# Support
SUPPORT_TELEGRAM=@your_support_bot
ADMIN_PHONE=+1234567890

# Default Values (Don't change unless necessary)
DEFAULT_URI=https://your-domain.com